<div class="col-lg-6">
<div class="well bs-component live-less-editor-hovercontainer" >
<%= simple_form_for(@document) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, :label => "Título" %>
    <%= f.input :description, :label => "Descrição" %>
  </div>

  <div class="form-group">
    <%= f.label "Arquivo" %>
    <%= f.file_field :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Salvar", class: "btn btn-primary" %>
    <%= link_to "Voltar", :back,  class: "btn btn-warning" %>
  </div>
<% end %>
</div>
</div>
