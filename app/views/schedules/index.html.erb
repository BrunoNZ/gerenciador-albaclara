<p id="notice"><%= notice %></p>

<h1>Listing Schedules</h1>

<%= link_to new_schedule_path, class: "btn btn-success" do %>
  <span class="glyphicon glyphicon-plus" aria-hidden="true">Novo</i>
<% end %>

<table id="table"
  class="table table-hover"
  data-toggle="table"
  data-id-table="advancedTable"
  data-search="true"
  data-pagination="true">
  <thead>
    <tr>
      <th>Name</th>
      <th>Contact name</th>
      <th>Contact phone</th>
      <th>Contact date</th>
      <th>Visit datetime</th>
      <th>Address</th>
      <th>Observation</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.name %></td>
        <td><%= schedule.contact_name %></td>
        <td><%= schedule.contact_phone %></td>
        <td><%= schedule.contact_date %></td>
        <td><%= schedule.visit_datetime %></td>
        <td><%= schedule.address %></td>
        <td><%= schedule.observation %></td>
        <td><%= schedule.status %></td>
        <td>
          <%= link_to edit_schedule_path(schedule), class: "btn btn-primary" do %>
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></i>
          <% end %>
          <%= link_to schedule, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
