<p id="notice"><%= notice %></p>

<h1>Listing Productivities</h1>

<%= link_to new_productivity_path, class: "btn btn-success" do %>
  <span class="glyphicon glyphicon-plus" aria-hidden="true">Novo</i>
<% end %>

<table id="table"
  class="table table-hover"
  data-toggle="table"
  data-id-table="advancedTable"
  data-search="true"
  data-pagination="true">
  <thead>
    <tr>
      <th>Analysis start date</th>
      <th>Analysis end date</th>
      <th>Call qty</th>
      <th>Answered call qty</th>
      <th>Interlocutor qty</th>
      <th>Schedule qty</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @productivities.each do |productivity| %>
      <tr>
        <td><%= productivity.analysis_start_date %></td>
        <td><%= productivity.analysis_end_date %></td>
        <td><%= productivity.call_qty %></td>
        <td><%= productivity.answered_call_qty %></td>
        <td><%= productivity.interlocutor_qty %></td>
        <td><%= productivity.schedule_qty %></td>
        <td>
          <%= link_to edit_productivity_path(productivity), class: "btn btn-primary" do %>
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></i>
          <% end %>
          <%= link_to productivity, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
