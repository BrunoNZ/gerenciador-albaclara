<h1>Produtividade</h1>
<ul class="list-inline">

  <% if can? :update, @productivity %>
  <li>
    <%= button_to edit_productivity_path(@productivity), method: :get, class: "btn btn-primary" do %>
      <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
      Editar
    <% end %>
  </li>
  <% end %>
  <% if can? :destroy, @productivity %>
  <li>
    <%= button_to @productivity, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "btn btn-danger" do %>
      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
      Remover
    <% end %>
  </li>
  <% end %>

</ul>
<br>

<p>
  <strong>Cliente:</strong>
  <%= link_to @productivity.client.name, @productivity.client %>
</p>

<p>
  <strong>Início da análise:</strong>
  <%= @productivity.analysis_start_date %>
</p>

<p>
  <strong>Fim da análise:</strong>
  <%= @productivity.analysis_end_date %>
</p>

<p>
  <strong>Ligações:</strong>
  <%= @productivity.call_qty %>
</p>

<p>
  <strong>Ligações respondidas:</strong>
  <%= @productivity.answered_call_qty %>
</p>

<p>
  <strong>Interlocutores:</strong>
  <%= @productivity.interlocutor_qty %>
</p>

<p>
  <strong>Agendamentos:</strong>
  <%= @productivity.schedule_qty %>
</p>
