<%= simple_form_for(@client) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :billing_date %>
    <%= f.input :contract_start_date %>
  </div>

  <h3>Contatos</h3>
  <%= f.fields_for :contacts do |contact| %>
    <%= render "contact_fields", :f => contact %>
  <% end %>

  <div class="form-actions">
    <p>
    <%= link_to_add_association 'Adicionar contato', f, :contacts,
      :class => "btn btn-primary", :render_options => {:display => 'inline' } %>
    </p>
    <p>
    <%= f.button :submit, :class => "btn btn-success" %>
  </p>
  </div>
<% end %>
