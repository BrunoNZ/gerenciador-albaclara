<p id="notice"><%= notice %></p>

<h1>Listing Clients</h1>

<%= link_to new_client_path, class: "btn btn-success" do %>
  <span class="glyphicon glyphicon-plus" aria-hidden="true">Adicionar cliente</i>
<% end %>

<table id="table"
  class="table table-hover"
  data-toggle="table"
  data-id-table="advancedTable"
  data-search="true"
  data-pagination="true">
  <thead>
    <tr>
      <th>Name</th>
      <th>Billing date</th>
      <th>Contract start date</th>
      <th>Address</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.billing_date %></td>
        <td><%= client.contract_start_date %></td>
        <td><%= client.address %></td>
        <td>
          <%= link_to edit_client_path(client), class: "btn btn-primary" do %>
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></i>
          <% end %>
          <%= link_to client, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
